<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Pick3Pick4Label">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="loading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@color/loading</item>
    </style>

    <style name="DivStyle">
        <item name="android:background">@drawable/div_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="tiroListItem">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/list_item_tiro_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tiroNumber">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tiroNumberToday">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tiroDate">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="tiroDateToday">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="mainLabelFragments">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="yeyoSplash">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="lottoSplash">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="loginLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="loginFieldsLogin">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/hintColorLogin</item>
    </style>

    <style name="registerLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="divRegister">
        <item name="android:background">@drawable/div_register_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="registerFields">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColorHint">@android:color/tab_indicator_text</item>
    </style>

    <style name="loginFieldsRegister">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
    </style>

    <style name="loginButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorForegroundRegister</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="logoutButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@color/backgroundLogoutButton</item>
    </style>

    <style name="user_data_fields">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="email_usa">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:drawableRight">@drawable/ic_action_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="logout_label">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="logout_confirm_buttons">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>