<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Pick3Pick4Label">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="DivStyle">
        <item name="android:background">@drawable/div_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="tiroListItem">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/list_item_tiro_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tiroNumber">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tiroDate">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="lastTirosLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="lastDateUpdated">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="yeyoSplash">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="lottoSplash">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="loginLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="registerLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="divRegister">
        <item name="android:background">@drawable/div_register_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="registerFields">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColorHint">@android:color/tab_indicator_text</item>
    </style>

    <style name="loginFields">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
    </style>

</resources>
